<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6fafe"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/back_arrow"
        android:onClick="goBack" />


    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backButton"
        android:layout_marginTop="75dp"
        android:background="@drawable/edittext_styled"
        android:textSize="22dp"
        android:layout_marginBottom="8dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_styled"
        android:textSize="22dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/question"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/householdIDEditText"
        android:layout_marginStart="-46dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="53dp"
        android:layout_toEndOf="@+id/householdIDEditText"
        android:background="@drawable/question"
        android:contentDescription="Question Icon" />

    <EditText
        android:id="@+id/householdIDEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_styled"
        android:textSize="22dp"
        android:hint="Household ID (Optional)"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/householdIDEditText"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#04adbf"
        android:fontFamily="@font/quicksand"
        android:text="Register"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/registerButton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="App Logo"
        android:scaleType="centerInside"
        android:src="@drawable/tastytracker_logo" />

</RelativeLayout>
